<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submit" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="120dp" android:width="250dp"
            android:height="60dp" android:textColor="#FFFFFF" android:textSize="22sp" android:background="#FF5722"/>
    <TextView
            android:text="Pig Latin Generator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title" android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true" android:textSize="40sp" android:background="#03A9F4"
            android:layout_marginTop="40dp" android:textStyle="bold" android:padding="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/outputText" android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true" android:textSize="32sp" android:background="#4CAF50"
            android:layout_marginTop="190dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textbox" android:layout_centerInParent="true" android:hint="Type a word"
            android:textColor="#FFFFFF" android:textSize="26sp" android:background="#9C27B0" android:padding="10dp"
            android:textColorHint="#FFFFFF"/>
</RelativeLayout>